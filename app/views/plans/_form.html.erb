    </div>
  </div>
  <div class="control-group">
    <%= f.label :descryption, :class => "control-label" %>
    <div class="controls">
    	<%= f.text_area :descryption, :rows => "8" %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :value, :class => "control-label" %>
    <div class="controls">
    	<%= f.text_field :value %>
   	</div>
  </div>
  <div class="form-actions">
    <%= f.submit "Send", :class => 'btn btn-primary' %>
  </div>
<% end %>
